{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "src/server.ts",
    "src/DB/**/*",
    "src/authors/**/*",
    "src/books/**/*",
    "src/interface/**/*"
  ],
  "exclude": [
    "src/components/**/*",
    "src/contexts/**/*",
    "src/main.tsx",
    "src/App.tsx",
    "src/types/session.d.ts",
    "node_modules"
  ]
}
